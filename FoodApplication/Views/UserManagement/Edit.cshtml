@model FoodApplication.Web.Models.EditUserViewModel


@{
    ViewData["Title"] = "Edit User";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        background-color: #f0f8ff;
        color: #333;
    }

    .edit-user-container {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-top: 50px;
    }

    .edit-user-header {
        background-color: #007bff;
        color: #ffffff;
        padding: 20px;
        border-radius: 10px 10px 0 0;
        margin: -30px -30px 30px -30px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .form-check-input:checked {
        background-color: #007bff;
        border-color: #007bff;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
</style>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 edit-user-container">
            <div class="edit-user-header">
                <h2 class="text-center mb-0">Edit User</h2>
            </div>
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsLocked" class="form-check-input" />
                    <label asp-for="IsLocked" class="form-check-label">Account Locked</label>
                </div>

                <div class="mb-4">
                    <h4>Roles</h4>
                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model.Roles[i].RoleId" />
                            <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                            <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                            <label asp-for="@Model.Roles[i].IsSelected" class="form-check-label">
                                @Model.Roles[i].RoleName
                            </label>
                        </div>
                    }
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
