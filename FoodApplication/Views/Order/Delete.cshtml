@model FoodApplication.BLL.Models.DeleteOrderDTO
@{
    ViewData["Title"] = "Delete Order";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Order</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-danger mb-4">Are you sure you want to delete this order?</h3>
                    <dl class="row">
                        <dt class="col-sm-4">Order ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Order Date</dt>
                        <dd class="col-sm-8">@Model.OrderDate.ToString("MMM dd, yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Total Amount</dt>
                        <dd class="col-sm-8">@Model.TotalAmount.ToString("C")</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8"><span class="badge bg-@(Model.Status.ToString().ToLower())">@Model.Status</span></dd>

                        <dt class="col-sm-4">Customer</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4">Order Items</dt>
                        <dd class="col-sm-8">
                            <ul class="list-unstyled">
                                @foreach (var item in Model.OrderItems)
                                {
                                    <li>@item</li>
                                }
                            </ul>
                        </dd>
                    </dl>
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg me-2">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        border-radius: 10px 10px 0 0;
    }

    .badge {
        font-size: 1rem;
        padding: 0.5em 1em;
    }

    .badge-pending {
        background-color: #ffc107;
    }

    .badge-processing {
        background-color: #17a2b8;
    }

    .badge-completed {
        background-color: #28a745;
    }

    .badge-cancelled {
        background-color: #dc3545;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
    }
</style>