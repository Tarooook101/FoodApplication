@model IEnumerable<FoodApplication.BLL.Models.OrderDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet">
<style>
    body {
        background-color: #f8f9fa;
        color: #333;
    }

    .container {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-top: 50px;
        margin-bottom: 50px;
    }

    h1 {
        color: #007bff;
        margin-bottom: 30px;
        font-weight: 300;
    }

    .table {
        border-collapse: separate;
        border-spacing: 0;
    }

        .table th, .table td {
            border: none;
            padding: 12px;
        }

        .table thead th {
            background-color: #007bff;
            color: #fff;
            font-weight: 500;
            text-transform: uppercase;
        }

        .table tbody tr:nth-of-type(even) {
            background-color: #f8f9fa;
        }

        .table tbody tr:hover {
            background-color: #e9ecef;
        }

    .badge {
        font-size: 0.9em;
        padding: 0.5em 0.7em;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
        color: #fff;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
            color: #fff;
        }

    .no-data {
        text-align: center;
        padding: 20px;
        font-style: italic;
        color: #6c757d;
    }
</style>


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                

                    <div class="container mt-4">
                    <h1 class="text-center mb-5"><i class="fas fa-history me-3"></i>Order History</h1>

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col"><i class="fas fa-hashtag me-2"></i>Order ID</th>
                                        <th scope="col"><i class="fas fa-calendar-alt me-2"></i>Order Date</th>
                                        <th scope="col"><i class="fas fa-dollar-sign me-2"></i>Total Amount</th>
                                        <th scope="col"><i class="fas fa-info-circle me-2"></i>Status</th>
                                        <th scope="col"><i class="fas fa-cogs me-2"></i>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td>@item.TotalAmount.ToString("C")</td>
                                            <td>
                                                @{
                                                    var statusClass = item.Status switch
                                                    {
                                                        FoodApplication.DAL.Entities.OrderStatus.Completed => "bg-success",
                                                        FoodApplication.DAL.Entities.OrderStatus.Processing => "bg-warning",
                                                        FoodApplication.DAL.Entities.OrderStatus.Cancelled => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @statusClass">@item.Status</span>
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye me-1"></i>View Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="no-data">
                            <i class="fas fa-exclamation-circle fa-3x mb-3"></i>
                            <p>No order data available. This could be due to:</p>
                            <ul>
                                <li>No orders have been placed yet.</li>
                                <li>There might be an issue with data retrieval from the database.</li>
                                <li>The Model might not be properly populated in the controller.</li>
                            </ul>
                            <p>Please check your data source and controller logic.</p>
                        </div>
                    }
                    </div>


            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>


