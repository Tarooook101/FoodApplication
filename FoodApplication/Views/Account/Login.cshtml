@model LoginDTO
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login - Food Application</title>

    <!-- Google Font: Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7fa;
        }

        .login-container {
            max-width: 400px;
            margin: 50px auto;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #ffffff;
            border-bottom: none;
            padding: 30px 0 0;
        }

        .card-body {
            padding: 30px;
        }

        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
            padding: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #2e59d9;
                border-color: #2e59d9;
            }

        .form-control {
            border-radius: 8px;
            padding: 12px;
        }

        .input-group-text {
            border-radius: 8px;
            background-color: #f8f9fc;
        }

        .logo {
            font-size: 2.5rem;
            font-weight: 700;
            color: #4e73df;
            text-decoration: none;
        }

            .logo span {
                color: #5a5c69;
            }

        .form-check-input:checked {
            background-color: #4e73df;
            border-color: #4e73df;
        }

        .forgot-password {
            color: #4e73df;
            text-decoration: none;
            font-weight: 500;
        }

            .forgot-password:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="card">
            <div class="card-header text-center">
                <a href="#" class="logo">Food<span>App</span></a>
                <p class="mt-3 text-muted">Sign in to your account</p>
            </div>
            <div class="card-body">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-4"></div>

                    <div class="mb-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" class="form-control" asp-for="Email" placeholder="Email address">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">
                                Remember me
                            </label>
                        </div>
                    </div>

                    <div class="d-grid mb-4">
                        <button type="submit" class="btn btn-primary">Sign In</button>
                    </div>

                    <div class="text-center mb-3">
                        <a asp-controller="Account" asp-action="ForgetPassword" class="forgot-password">Forgot password?</a>
                    </div>
                </form>

                <p class="text-center mt-4">
                    Don't have an account? <a asp-controller="Account" asp-action="Registration" class="text-primary">Register now</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>