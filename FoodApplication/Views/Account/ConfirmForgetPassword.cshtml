@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Password Reset Confirmation - Food Application</title>

    <!-- Google Font: Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7fa;
        }

        .confirmation-container {
            max-width: 400px;
            margin: 50px auto;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #ffffff;
            border-bottom: none;
            padding: 30px 0 0;
        }

        .card-body {
            padding: 30px;
        }

        .logo {
            font-size: 2.5rem;
            font-weight: 700;
            color: #4e73df;
            text-decoration: none;
        }

            .logo span {
                color: #5a5c69;
            }

        .confirmation-icon {
            font-size: 3rem;
            color: #28a745;
            margin-bottom: 1rem;
        }

        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
            padding: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #2e59d9;
                border-color: #2e59d9;
            }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <div class="card">
            <div class="card-header text-center">
                <a href="#" class="logo">Food<span>App</span></a>
            </div>
            <div class="card-body text-center">
                <i class="fas fa-check-circle confirmation-icon"></i>
                <h4 class="mb-4">Password Reset Link Sent</h4>
                <p class="mb-4">A password reset link has been sent to your email inbox. Please check your email and follow the instructions to reset your password.</p>
                <a href="/Account/Login" class="btn btn-primary">Back to Login</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>