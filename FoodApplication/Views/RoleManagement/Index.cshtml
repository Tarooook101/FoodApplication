<div class="content-wrapper">
    <div class="container">
        <h1 class="text-center page-title">Role Management Dashboard</h1>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="d-flex justify-content-end mb-4">
            <a asp-action="Create" class="btn create-role-btn">
                <i class="fas fa-plus me-2"></i>Create New Role
            </a>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var role in Model)
            {
                <div class="col">
                    <div class="card h-100 role-card">
                        <div class="card-body">
                            <h5 class="card-title mb-3">@role.Name</h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="far fa-calendar-alt me-1"></i> Created on: @role.CreatedOn<br>
                                    <i class="far fa-user me-1"></i> Created by: @role.CreatedBy
                                </small>
                            </p>
                            <p class="card-text">
                                <span class="badge bg-info me-2">
                                    <i class="fas fa-users me-1"></i> @role.UserCount Users
                                </span>
                                @if (role.IsActive)
                                {
                                    <span class="badge bg-success"><i class="fas fa-check me-1"></i> Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger"><i class="fas fa-times me-1"></i> Inactive</span>
                                }
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-action btn-edit" title="Edit">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                                <a asp-action="ManageUsers" asp-route-roleId="@role.Id" class="btn btn-action btn-manage" title="Manage Users">
                                    <i class="fas fa-users me-1"></i> Manage
                                </a>
                                <form asp-action="Delete" asp-route-id="@role.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this role?');">
                                    <button type="submit" class="btn btn-action btn-delete" title="Delete">
                                        <i class="fas fa-trash me-1"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
