@using FoodApplication.DAL.Entities
@using FoodApplication.DAL.Extend
@using Microsoft.AspNetCore.Identity
@model CreateRecipeDTO


@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create Recipes";
    Layout = "~/Views/Layout/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">


<style>
    body {
        background-color: #f8f9fa;
    }

    .recipe-form-container {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-top: 50px;
    }

    .form-label {
        font-weight: bold;
        color: #495057;
    }

    .btn-add-ingredient,
    .btn-remove-ingredient {
        padding: 5px 10px;
        font-size: 0.9rem;
    }

    .ingredient-row {
        background-color: #f1f3f5;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 15px;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .custom-file-label::after {
        content: "Browse";
    }

    .preview-image {
        max-width: 200px;
        max-height: 200px;
        object-fit: cover;
        border-radius: 10px;
        margin-top: 10px;
    }
</style>

<div class="content-wrapper">
    
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }


                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-8 recipe-form-container">
                            <h2 class="text-center mb-4">Create New Recipe</h2>

                            <form asp-controller="Recipe" asp-action="Create" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Recipe Name</label>
                                    <input asp-for="Name" class="form-control" required>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Description</label>
                                    <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Instructions" class="form-label">Instructions</label>
                                    <textarea asp-for="Instructions" class="form-control" rows="5" required></textarea>
                                    <span asp-validation-for="Instructions" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label">Price</label>
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Ingredients</label>
                                    <div id="ingredients-container">
                                        <!-- Ingredient rows will be added here dynamically -->
                                    </div>
                                    <button type="button" id="add-ingredient" class="btn btn-primary btn-add-ingredient mt-2">
                                        <i class="fas fa-plus"></i> Add Ingredient
                                    </button>
                                    <span asp-validation-for="RecipeIngredients" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CategoryIds" class="form-label">Categories</label>
                                    <select asp-for="CategoryIds" class="form-select" multiple required>
                                        @foreach (var category in ViewBag.Categories)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryIds" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ImageFile" class="form-label">Recipe Image</label>
                                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    <img id="image-preview" src="#" alt="Image preview" class="mt-2 img-thumbnail d-none" style="max-width: 200px; max-height: 200px;" />
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-lg">Create Recipe</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </section>
    <!-- /.content -->

</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        console.log("hi i am tarek");

        $(document).ready(function () {
            let ingredientIndex = 0;

            function addIngredientRow() {
                const row = `
                    <div class="ingredient-row mb-2">
                        <div class="row">
                            <div class="col-md-5">
                                <select name="RecipeIngredients[${ingredientIndex}].IngredientId" class="form-control ingredient-select" required>
                                    <option value="">Select Ingredient</option>
        @foreach (var ingredient in ViewBag.Ingredients)
        {
                                            <option value="@ingredient.Id" data-name="@ingredient.Name">@ingredient.Name</option>
        }
                                </select>
                                <input type="hidden" name="RecipeIngredients[${ingredientIndex}].IngredientName" class="ingredient-name" />
                            </div>
                            <div class="col-md-5">
                                <input type="text" name="RecipeIngredients[${ingredientIndex}].Quantity" class="form-control" placeholder="Quantity" required />
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-danger btn-remove-ingredient">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                `;
                $('#ingredients-container').append(row);
                ingredientIndex++;
            }

            $('#add-ingredient').click(addIngredientRow);

            $(document).on('click', '.btn-remove-ingredient', function () {
                $(this).closest('.ingredient-row').remove();
            });

            $(document).on('change', '.ingredient-select', function () {
                const selectedOption = $(this).find('option:selected');
                const ingredientName = selectedOption.data('name');
                $(this).siblings('.ingredient-name').val(ingredientName);
            });

            // Image preview
            $('#ImageFile').change(function () {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        $('#image-preview').attr('src', e.target.result).removeClass('d-none');
                    }
                    reader.readAsDataURL(file);
                }
            });

            // Add the first ingredient row by default
            addIngredientRow();
        });
    </script>
}
